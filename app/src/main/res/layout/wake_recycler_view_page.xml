<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/entire_wake_view_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/default_current_time_string"
            android:textSize="80sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/light_color"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <View
                android:id="@+id/top_divider"
                app:layout_widthPercent="95%"
                android:layout_height="1dp"
                android:background="@color/light_color"/>
        </android.support.percent.PercentRelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/wake_screen_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/bottom_button_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">
        <View
            android:layout_centerHorizontal="true"
            android:id="@+id/bottom_separator"
            app:layout_widthPercent="95%"
            android:layout_height="1dp"
            android:background="@color/light_color"/>
        <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottom_card_view"
            app:layout_widthPercent="92%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            app:layout_marginTopPercent="20%"
            app:layout_heightPercent="80%"
            android:layout_below="@id/bottom_separator"
            card_view:cardCornerRadius="1dp"
            card_view:cardBackgroundColor="@color/bottom_button_color"
            card_view:cardElevation="6dp"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mini_alarm_icon_bottom_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_snooze_black_48dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/bottom_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_button"
                    android:textSize="20sp"
                    android:textColor="@color/bottom_text_color"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"/>
                <ImageView
                    android:id="@+id/mini_alarm_icon_bottom_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_snooze_black_48dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>